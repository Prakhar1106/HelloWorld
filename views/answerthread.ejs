  <body>
    <!-- ======= Header ======= -->

    <header id="header" class="header fixed-top">
      <div
        class="container-fluid container-xl d-flex align-items-center justify-content-between">
        <a href="/" class="logo d-flex align-items-center">
          <img src="assets/img/logo.jpeg" alt="" />
          <span>Sangam</span>
        </a>

        <nav id="navbar" class="navbar">
          <ul>
            <li>
              <a class="nav-link scrollto active" href="/home">Community</a>
            </li>
            <li><a class="nav-link scrollto" href="/club">Clubs</a></li>
            <li><a class="nav-link scrollto" href="/logout">logout</a></li>
            <li>
              <a class="getstarted scrollto" href="/dashboard">Dashboard</a>
            </li>
          </ul>
          <i class="bi bi-list mobile-nav-toggle"></i>
        </nav>
        <!-- .navbar -->
      </div>
    </header>

    <!-- ======= END Header ======= -->


    

    <!-- ======= START MAIN  ======= -->

    <main id="main">
      
      <% var data %>

      <header class="section-header">
          <p><%= questions[0].ques_text %></p>
      </header>


      
      <!-- Loop to display answers -->
  
      <% answerslist.forEach((element, index, array)=> 
      { %>
          <div class="media my-5">
              <div class="media-body">
                <div class="card">
                  <img class="mr-3" src="assets/img/avtar1.png" width=60px style="margin-left: 12px; margin-top: 12px;"> 
                  
                  <h5 style="margin-left: 15px; margin-top: 5px;">Posted on <%= element.ans_date %></h5>
                  <div class="card-body">
                    <blockquote class="blockquote mb-0">
                      <p><%= element.ans_text %></p>
                    </blockquote>
                  </div>
                </div>
              </div>
          </div>
      <% }); %>
      <!-- End Loop  -->
     

     <!-- ======= ADD ANSWER Section ======= -->
      
     <div class="row my-4">
      <div class="col-md-7 col-sm-7">
          <form action="/addanswer-<%= questions[0].ques_id %>" method="POST">
              <div class="form-group">
                  <img src="/assets/img/avtar1.png" alt="" class="profile-photo-md"
                      style="padding: 20px; margin-left: 180px;">

                  <input type="textarea" name="ans_text" style="margin-left: 200px; width: 600px; height: 90px;"
                      id="category_name" cols="30" rows="1" class="form-control"
                      placeholder="Add Your Answer Here..."></input>
              </div>
      </div>

      <div class="col-md-7 col-sm-7">
          <div class="tools">
              <input type="submit" class="btn btn-primary pull-right" style="margin-left: 200px;"
                  value="Add Answer" />
          </div>
      </div>
      </form>

  </div>

  <!-- ======= ADD ANSWER END ======= -->

     
  



    </main>
    <!-- ======= END CONTENT ======= -->








    <!-- ======= Footer ======= -->
