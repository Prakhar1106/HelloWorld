    <meta content="" name="description" />

    <meta content="" name="keywords" />

    <!-- Favicons -->
    <link href="assets/img/logo.jpeg" rel="icon" />
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon" />

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
        rel="stylesheet" />

    <!-- Vendor CSS Files -->
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="assets/vendor/aos/aos.css" rel="stylesheet" />
    <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet" />
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" />

    <!-- Template Main CSS File -->
    <link href="css/style.css" rel="stylesheet" />
    <link href="css/style1.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />

    <style>
        .jumbotron {
            position: relative;
            overflow: hidden;
            background-color: black;
        }

        .jumbotron video {
            position: absolute;
            z-index: 1;
            top: 0;
            width: 100%;
            height: 100%;
            /*  object-fit is not supported on IE  */
            object-fit: cover;
            opacity: 0.5;
        }

        .jumbotron .container {
            z-index: 2;
            position: relative;
        }

        .media {
            margin-left: 20vh;
        }
    </style> 
</head>

<body>
    <!-- ======= Header ======= -->

    <header id="header" class="header fixed-top">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">
            <a href="/" class="logo d-flex align-items-center">
                <img src="assets/img/logo.jpeg" alt="" />
                <span>Sangam</span>
            </a>

            <nav id="navbar" class="navbar">
                <ul>
                    <li>
                        <a class="nav-link scrollto active" href="home">Community</a>
                    </li>
                    <li><a class="nav-link scrollto" href="club">Clubs</a></li>
                    <li><a class="nav-link scrollto" href="logout">logout</a></li>
                    <li>
                        <a class="getstarted scrollto" href="dashboard">Dashboard</a>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
            <!-- .navbar -->
        </div>
    </header>

    <!-- ======= END Header ======= -->




    <!-- ======= START MAIN  ======= -->

    <main id="main">
        <% var data %>

        <div class="jumbotron jumbotron-fluid">
            <img src="assests/img/jumbodron-bg.png" alt="">
            <div class="container text-white">
                <h1 class="display-4"><%= category[0].tag_name %> Queries Forum</h1>
                <p class="lead">
                    This forum is for <%= category[0].tag_name %> queries. Feel free to ask any question.
                </p>
                <hr class="my-4" />
                <p>
                    No Spam / Advertising / Self-promote. Do not cross post questions. Remain respectful of other
                    members at all times
                </p>
            </div>
            <!-- /.container -->
        </div>
        <!-- /.jumbotron -->

        <header class="section-header">
            <p>Browse Questions</p>
        </header>



        <!-- Loop to display questions -->
    

        <% questionslist.forEach((element, index, array)=> { %>

        <div class="media my-3">
            <img class="mr-3" src="assets/img/avtar1.png" width="60px" alt="Generic placeholder image">
            <div class="media-body">
                <h5 class="mt-0" ><a href="/answers-<%= element.ques_id %>"><%= element.ques_text %></a></h5>
               
            </div>
        </div>
        
        <% }); %>
        <!-- End Loop to display questions -->



        <!-- ======= ADD QUESTION Section =======  -->
        <div class="row my-4">
            <div class="col-md-7 col-sm-7">
                <form action="/askquestion-<%= category[0].tag_id %>" method="POST">
                    <div class="form-group">
                        <img src="/assets/img/avtar1.png" alt="" class="profile-photo-md"
                            style="padding: 20px; margin-left: 180px;">

                        <input type="textarea" name="ques_text" style="margin-left: 200px; width: 600px; height: 90px;"
                            id="category_name" cols="30" rows="1" class="form-control"
                            placeholder="Add Your Question Here..."></input>
                    </div>
            </div>

            <div class="col-md-7 col-sm-7">
                <div class="tools">
                    <input type="submit" class="btn btn-primary pull-right" style="margin-left: 200px;"
                        value="Add Question" />
                </div>
            </div>
            </form>

        </div>

        <!-- ======= ADD QUESTION END ======= -->

    </main>
    <!-- ======= END CONTENT ======= -->








    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright 2021 | <strong><span>MNNIT Sangam</span></strong> | All
                Rights Reserved
            </div>
            <div class="credits">
                Designed with &#10084;&#65039;
                <a href="https://bootstrapmade.com/"> by Hello,World!</a>
            </div>
        </div>
    </footer>
    <!-- ======== End Footer ======== -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="assets/vendor/aos/aos.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>
    <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="assets/vendor/purecounter/purecounter.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>

    <!-- Template Main JS File -->
    <script src="js/script.js"></script>
    <div id="fb-root"></div>
     <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v10.0"
        nonce="crzE4TFa">
        </script> 

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
