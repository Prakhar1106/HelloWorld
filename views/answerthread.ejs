    <style>
      .media{
          margin-left: 20vh;
      }

      .card {
        margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */
        margin-left: 200px;
        width: 120vh;
        align-items: center;
      }

    </style>
